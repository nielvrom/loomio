.thread-lintel.media{ng-show: 'show'}
  .media-left
    %img.media-object.thread-lintel__logo{src: '{{discussion.group().logoUrl()}}'}
  .media-body.thread-lintel__title
    {{ discussion.title }}

  .thread-lintel__progress-wrap.thread-lintel__progress
    .thread-lintel__progress-bar.thread-lintel__progress{style: 'width: {{positionPercent}}%'}
